<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donate</title>
    <!-- main site styles -->
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <!-- shared site header -->
  <%- include('partials/header') %>
    <div class="donate-form card">
        <h2 style="margin-bottom: 30px; text-align: center;">Make a Donation</h2>
        
         <!-- send the form to our donations add route -->
        <form action="/donations/add" method="POST">
          <div class="form-row">
             <!-- send the form to our donations add route -->
            <div class="form-group">
              <label for="firstname">First Name</label>
              <input type="text" id="firstname" name="firstname" required>
            </div>
            <div class="form-group">
              <label for="lastname">Last Name</label>
              <input type="text" id="lastname" name="lastname" required>
            </div>
          </div>
          <div class="form-group">
            <!-- email is used to link donations to participants if needed -->
            <label for="participant_email">Email Address</label>
            <input type="email" id="participant_email" name="participant_email" required>
          </div>
          
          <div class="form-group">
            <label>Select Amount</label>
            <div class="donation-amounts">
              <button type="button" onclick="setAmount(25)">$25</button>
              <button type="button" onclick="setAmount(50)">$50</button>
              <button type="button" onclick="setAmount(100)">$100</button>
              <button type="button" onclick="setAmount(250)">$250</button>
            </div>
          </div>
          <!-- fallback custom amount entry -->
          <div class="form-group">
            <label for="amount">Or Enter Custom Amount ($)</label>
            <input type="number" id="amount" name="amount" min="1" step="0.01" required>
          </div>
          <!-- submit donation -->
          <button type="submit" class="btn btn-primary" style="width: 100%;">Donate Now</button>
        </form>
      </div>
  <%- include('partials/footer') %>
  <script>
    // updates the amount field when a preset button is clicked
    function setAmount(value) {
      document.getElementById('amount').value = value;
      // highlight the selected preset button
      document.querySelectorAll('.donation-amounts button').forEach(btn => btn.classList.remove('active'));
      event.target.classList.add('active');
    }
  </script>
</body>
</html>
<!-- Donations Data Page -->
<!-- Dawson Broadbent, Ashlynn Burgess, Markus Walker -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Donate - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <h1>Support Our Mission</h1>
      <p style="opacity: 0.8;">Your donation helps us continue our vital work in the community.</p>
    </div>
  </div>

  <section class="content-section">
    <div class="container">
      <% if (error_message) { %>
      <div class="alert alert-error"><%= error_message %></div>
      <% } %>

      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
        <form action="/donations" method="GET" class="search-box" style="margin-bottom: 0;">
          <input type="text" name="q" placeholder="Search donations..." value="<%= q || '' %>">
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
      
        <% if (canEdit) { %>
          <button
            type="button"
            class="btn btn-primary"
            onclick="document.getElementById('addForm').style.display = (document.getElementById('addForm').style.display === 'none' ? 'block' : 'none')"
          >
            Add Donation
          </button>
      </div>

      <% if (canEdit) { %>
      <div id="addForm" class="card" style="display: none; margin-bottom: 30px;">
        <h3 style="margin-bottom: 20px;">Add New Donation</h3>
        <form action="/donations/add" method="POST">
          <div class="form-group">
            <label for="participant_email">Participant Email</label>
            <input type="email" id="participant_email" name="participant_email" required>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="donation_date">Donation Date</label>
              <input type="date" id="donation_date" name="donation_date" required>
            </div>
            <div class="form-group">
              <label for="amount">Donation Amount</label>
              <input type="number" id="amount" name="amount" min="0.01" step="0.01" required>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Add Donation</button>
        </form>
      </div>
      <% } %>

      <!-- ✅ Scrollable table container (sticky header) -->
      <div class="table-scroll" role="region" aria-label="Donation records table" tabindex="0">
        <table class="sticky-table">
          <thead>
            <tr>
              <th>Donor Name</th>
              <th>Amount</th>
              <th>Date</th>
              <% if (canEdit) { %>
              <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% if (donations.length === 0) { %>
            <tr>
              <td colspan="<%= canEdit ? 4 : 3 %>" style="text-align: center; color: #666;">No donations found.</td>
            </tr>
            <% } else { %>
            <% donations.forEach(donation => { %>
            <tr>
              <td><%= donation.donor %></td>
              <td>$<%= donation.amount %></td>
              <td><%= donation.date %></td>
              <% if (canEdit) { %>
                <td class="action-buttons">
                  <button type="button" class="btn-edit" onclick="openEditModal(this)"
                    data-participantid="<%= donation.id %>"
                    data-donationnumber="<%= donation.number %>"
                    data-amount="<%= donation.amount %>"
                    data-date="<%= donation.isoDate %>"
                  >Edit</button>
                  <form action="/donations/<%= donation.id %>/<%= donation.number %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this donation?')">
                    <button type="submit" class="btn-delete">Delete</button>
                  </form>
                </td>
              <% } %>
            </tr>
            <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>

      <% } %>
    </div>
  </section>

  <!-- ✅ Edit Modal -->
  <% if (canEdit) { %>
    <div id="editModalBackdrop" class="modal-backdrop" onclick="backdropClose(event)">
      <div class="modal" role="dialog" aria-modal="true" aria-labelledby="editModalTitle" onclick="event.stopPropagation()">
        <div class="modal-header">
          <h3 id="editModalTitle">Edit Donation</h3>
          <button class="modal-close" type="button" onclick="closeEditModal()" aria-label="Close">×</button>
        </div>

        <div class="modal-body">
          <form id="editDonationForm" method="POST">
            <div class="form-row">
              <div class="form-group">
                <label for="edit_amount">Amount ($)</label>
                <input type="number" id="edit_amount" name="amount" min="1" step="0.01" required>
              </div>
              <div class="form-group">
                <label for="edit_donation_date">Date</label>
                <input type="date" id="edit_donation_date" name="donation_date" required>
              </div>
            </div>

            <div class="modal-actions">
              <button type="button" class="btn-cancel" onclick="closeEditModal()">Cancel</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% } %>

  <script>
    function openEditModal(button) {
      const backdrop = document.getElementById('editModalBackdrop');
      const form = document.getElementById('editDonationForm');
      if (!backdrop || !form) return;

      const participantid = button.dataset.participantid;
      const donationnumber = button.dataset.donationnumber;
      const amount = button.dataset.amount;
      const date = button.dataset.date; // YYYY-MM-DD

      form.action = `/donations/${participantid}/${donationnumber}/edit`;

      document.getElementById('edit_amount').value = amount || '';
      document.getElementById('edit_donation_date').value = date || '';

      backdrop.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }

    function closeEditModal() {
      const backdrop = document.getElementById('editModalBackdrop');
      if (!backdrop) return;
      backdrop.style.display = 'none';
      document.body.style.overflow = '';
    }

    function backdropClose(event) {
      if (event.target.id === 'editModalBackdrop') closeEditModal();
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeEditModal();
    });
  </script>

  <%- include('partials/footer') %>

</body>
</html>
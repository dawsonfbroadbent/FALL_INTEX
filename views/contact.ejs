<!-- Contact Us Page -->
<!-- Dawson Broadbent, Ashlynn Burgess, Markus Walker -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact Us - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <%- include('partials/header') %>

    <div class="page-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p style="opacity: 0.8;">We’d love to hear from you! Whether you’re interested in volunteering, participating in a program, or have a general question, send us a message and our team will get back to you as soon as we can.</p>
    </div>
    </div>

    <section class="content-section">
    <div class="container">
        <% if (error_message) { %>
        <div class="alert alert-error"><%= error_message %></div>
        <% } %>
            <!-- wrapper card for the contact form -->
        <div class="card" style="max-width: 760px; margin: 0 auto;">
        <h2 style="margin-bottom: 20px;">Get In Touch</h2>
        <h4 style="margin-bottom: 20px; text-align: center;">(Not Yet Functional, See Note Below)</h4>
        
        <!-- form post target is ready for backend logic when enabled -->
        <form action="/contact" method="POST">
            <div class="form-group">
            <label for="name">Your Name</label>
            <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required />
            </div>
            <!-- dropdown used to help categorize incoming messages -->
            <div class="form-group">
            <label for="topic">What are you reaching out about?</label>
            <select id="topic" name="topic" required>
                <option value="" disabled selected>Select an option</option>
                <option value="volunteer">I'd like to volunteer with Ella Rises!</option>
                <option value="participate">I'd like to participate with Ella Rises!</option>
                <option value="other">Other</option>
            </select>
            </div>

            <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
        </div>
    </div>
    </section>
     <!-- this section explains future email integration using nodemailer -->
    <div class="card" style="max-width: 760px; margin: 0px auto 0;">
        <h3 style="margin: 0 0 0px; color: #F1A6A0;">Functionality Note</h3>
        <p class="muted" style="margin: 0; font-size: 14px; line-height: 1.6; color: #333; opacity: 0.9;">
            This contact form can be wired to support email delivery via Nodemailer on the server. To enable live sending to
            <strong>nadia@ellarises.org</strong>, we’ll confirm Ella Rises’ email provider (Google Workspace/Gmail, Microsoft 365/Outlook, etc.)
            and add the organization’s approved SMTP credentials (or a dedicated <strong>website@ellarises.org</strong> sending account) as secure
            environment variables on the server. Once configured, messages submitted here will be emailed directly to Nadia with the sender’s
            address set as <strong>Reply-To</strong> for easy responses.
        </p>
    </div>
    <br><br>

    <%- include('partials/footer') %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Surveys - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <h1>Surveys</h1>
      <p style="opacity: 0.8;">Post-program surveys and feedback</p>
    </div>
  </div>

  <section class="content-section">
    <div class="container">
      <% if (error_message) { %>
      <div class="alert alert-error"><%= error_message %></div>
      <% } %>

      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
        <form action="/surveys" method="GET" class="search-box" style="margin-bottom: 0;">
          <input type="text" name="q" placeholder="Search surveys..." value="<%= q || '' %>">
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
        <% if (canEdit) { %>
        <button type="button" class="btn btn-primary" onclick="document.getElementById('addForm').style.display = document.getElementById('addForm').style.display === 'none' ? 'block' : 'none'">Add Survey</button>
        <% } %>
      </div>

      <% if (canEdit) { %>
      <div id="addForm" class="card" style="display: none; margin-bottom: 30px;">
        <h3 style="margin-bottom: 20px;">Add New Survey Response</h3>
        <form action="/surveys/add" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="event">Event ID</label>
              <input type="text" id="event" name="event" required>
            </div>
            <div class="form-group">
              <label for="participant_email">Participant Email</label>
              <input type="email" id="participant_email" name="participant_email" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="sat">Satisfaction Score</label>
              <input type="number" id="sat" name="sat" max="5">
            </div>
            <div class="form-group">
              <label for="use">Usefulness Score</label>
              <input type="number" id="use" name="use" max="5">
            </div>
            <div class="form-group">
              <label for="inst">Instructor Score</label>
              <input type="number" id="inst" name="inst" max="5">
            </div>
            <div class="form-group">
              <label for="rec">Recommendation Score</label>
              <input type="number" id="rec" name="rec" max="5">
            </div>
          </div>
          <div class="form-group">
            <label for="comment">Comments</label>
            <input type="text" id="comment" name="comment">
          </div>
          <button type="submit" class="btn btn-primary">Add Survey Response</button>
        </form>
      </div>
      <% } %>

      <div class="score-legend" aria-label="Score legend">
        <span class="legend-title">Scores Legend:</span>
        <span class="legend-item"><span class="legend-badge">S</span> Satisfaction</span>
        <span class="legend-item"><span class="legend-badge">U</span> Usefulness</span>
        <span class="legend-item"><span class="legend-badge">I</span> Instructor</span>
        <span class="legend-item"><span class="legend-badge">R</span> Recommendation</span>
        <span class="legend-item"><span class="legend-badge">O</span> Overall</span>
        <% if (canEdit) { %>
          <span class="legend-item"><span class="legend-badge">NPS</span> Net Promoter Score</span>
        <% } %>
      </div>

      <!-- ✅ Scrollable table container (sticky header) -->
      <div class="table-scroll" role="region" aria-label="Surveys table" tabindex="0">
        <table class="sticky-table">
          <thead>
            <tr>
              <th>Participant</th>
              <th>Event Name</th>
              <th>S</th>
              <th>U</th>
              <th>I</th>
              <th>R</th>
              <th>O</th>
              <% if (canEdit) { %>
              <th>NPS</th>
              <% } %>
              <th>Comments</th>
              <th>Survey Date</th>
              <% if (canEdit) { %>
              <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% if (surveys.length === 0) { %>
            <tr>
              <td colspan="<%= canEdit ? 10 : 9 %>" style="text-align: center; color: #666;">No surveys found.</td>
            </tr>
            <% } else { %>
            <% surveys.forEach((s, index) => { %>
            <tr>
              <td><%= s.participantname %></td>
              <td><%= s.eventname %></td>
              <td><%= s.surveysatisfactionscore %></td>
              <td><%= s.surveyusefulnessscore %></td>
              <td><%= s.surveyinstructorscore %></td>
              <td><%= s.surveyrecommendationscore %></td>
              <td><%= (Number(s.surveysatisfactionscore) + Number(s.surveyusefulnessscore) + Number(s.surveyinstructorscore) + Number(s.surveyrecommendationscore)) / 4 %></td>
              <% if (canEdit) { %>
              <td><%= s.surveynpsbucket %></td>
              <% } %>
              <td class="comments-cell">
                <% if (s.surveycomments && s.surveycomments.length > 100) { %>
                  <div class="comment-text truncated" id="comment-<%= index %>">
                    <%= s.surveycomments %>
                  </div>
                  <button class="comment-toggle" onclick="toggleComment(<%= index %>)">
                    Read more
                  </button>
                <% } else { %>
                  <div class="comment-text">
                    <%= s.surveycomments || 'N/A' %>
                  </div>
                <% } %>
              </td>
              <td><%= s.surveysubmissiondate ? new Date(s.surveysubmissiondate).toLocaleDateString() : 'N/A' %></td>
              <% if (canEdit) { %>
              <td class="action-buttons">
                <button type="button" class="btn-edit"
                data-partid="<%= s.participantid %>"
                data-eventid="<%= s.eventid %>"
                data-email="<%= s.participantemail %>"
                data-eventname="<%= s.eventname %>"
                data-sat="<%= s.surveysatisfactionscore %>"
                data-use="<%= s.surveyusefulnessscore %>"
                data-inst="<%= s.surveyinstructorscore %>"
                data-rec="<%= s.surveyrecommendationscore %>"
                data-comments="<%= s.surveycomments || '' %>"
                onclick="openEditModalFromData(this)">
                Edit
              </button>
                <form action="/surveys/<%= s.participantid %>/<%= s.eventid %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this survey?')">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </td>
              <% } %>
            </tr>
            <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- ✅ Edit Modal -->
<% if (canEdit) { %>
  <div id="editModalBackdrop" class="modal-backdrop" onclick="backdropClose(event)">
    <div class="modal" role="dialog" aria-modal="true" aria-labelledby="editModalTitle" onclick="event.stopPropagation()">
      <div class="modal-header">
        <h3 id="editModalTitle">Edit Survey</h3>
        <button class="modal-close" type="button" onclick="closeEditModal()" aria-label="Close">×</button>
      </div>
      <div class="modal-body">
        <form id="editSurveyForm" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="edit_event">Event ID</label>
              <input type="text" id="edit_event" name="event" required readonly style="background-color: #f5f5f5;">
            </div>
            <div class="form-group">
              <label for="edit_participant_email">Participant Email</label>
              <input type="email" id="edit_participant_email" name="participant_email" required readonly style="background-color: #f5f5f5;">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="edit_sat">Satisfaction Score</label>
              <input type="number" id="edit_sat" name="sat" max="5" min="0" required>
            </div>
            <div class="form-group">
              <label for="edit_use">Usefulness Score</label>
              <input type="number" id="edit_use" name="use" max="5" min="0" required>
            </div>
            <div class="form-group">
              <label for="edit_inst">Instructor Score</label>
              <input type="number" id="edit_inst" name="inst" max="5" min="0" required>
            </div>
            <div class="form-group">
              <label for="edit_rec">Recommendation Score</label>
              <input type="number" id="edit_rec" name="rec" max="5" min="0" required>
            </div>
          </div>

          <div class="form-group">
            <label for="edit_comment">Comments</label>
            <textarea id="edit_comment" name="comment" rows="4" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;"></textarea>
          </div>

          <div class="modal-actions">
            <button type="button" class="btn-cancel" onclick="closeEditModal()">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% } %>

  <%- include('partials/footer') %>

  <script>
  // Toggle Read More/Less
  function toggleComment(index) {
    const commentDiv = document.getElementById('comment-' + index);
    const button = commentDiv.nextElementSibling;
    if (commentDiv.classList.contains('truncated')) {
      commentDiv.classList.remove('truncated');
      button.textContent = 'Read less';
    } else {
      commentDiv.classList.add('truncated');
      button.textContent = 'Read more';
    }
  }

  // DATE FIX: Target the form inside the #addForm container
  const addSurveyContainer = document.getElementById('addForm');
  if (addSurveyContainer) {
    const addForm = addSurveyContainer.querySelector('form');
    if (addForm) {
      addForm.addEventListener('submit', function(e) {
        const now = new Date().toISOString();
        document.getElementById('submissiondate').value = now;
      });
    }
  }

  // MODAL LOGIC (Was missing)
  const editModalBackdrop = document.getElementById('editModalBackdrop');
  const editForm = document.getElementById('editSurveyForm');

  function openEditModal(partId, eventId, email, eventName, sat, use, inst, rec, comments) {
    // 1. Populate fields
    document.getElementById('edit_event').value = eventId;
    document.getElementById('edit_participant_email').value = email;
    document.getElementById('edit_sat').value = sat;
    document.getElementById('edit_use').value = use;
    document.getElementById('edit_inst').value = inst;
    document.getElementById('edit_rec').value = rec;
    document.getElementById('edit_comment').value = comments;

    // 2. Set Form Action dynamically so it updates the correct row
    editForm.action = `/surveys/${partId}/${eventId}/edit`;

    // 3. Show Modal
    editModalBackdrop.style.display = 'flex'; // or 'block' depending on CSS
  }

  function closeEditModal() {
    editModalBackdrop.style.display = 'none';
  }

  function backdropClose(event) {
    if (event.target === editModalBackdrop) {
      closeEditModal();
    }
  }

  function openEditModalFromData(button) {
  const partId = button.getAttribute('data-partid');
  const eventId = button.getAttribute('data-eventid');
  const email = button.getAttribute('data-email');
  const eventName = button.getAttribute('data-eventname');
  const sat = button.getAttribute('data-sat');
  const use = button.getAttribute('data-use');
  const inst = button.getAttribute('data-inst');
  const rec = button.getAttribute('data-rec');
  const comments = button.getAttribute('data-comments');
  
  openEditModal(partId, eventId, email, eventName, sat, use, inst, rec, comments);
}
</script>
</body>
</html>
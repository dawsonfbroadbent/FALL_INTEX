<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Surveys - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <h1>Surveys</h1>
      <p style="opacity: 0.8;">Post-program surveys and feedback</p>
    </div>
  </div>

  <section class="content-section">
    <div class="container">
      <% if (error_message) { %>
      <div class="alert alert-error"><%= error_message %></div>
      <% } %>

      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
        <form action="/surveys" method="GET" class="search-box" style="margin-bottom: 0;">
          <input type="text" name="q" placeholder="Search surveys..." value="<%= q || '' %>">
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
        <% if (canEdit) { %>
        <button type="button" class="btn btn-primary" onclick="document.getElementById('addForm').style.display = document.getElementById('addForm').style.display === 'none' ? 'block' : 'none'">Add Survey</button>
        <% } %>
      </div>

      <% if (canEdit) { %>
      <div id="addForm" class="card" style="display: none; margin-bottom: 30px;">
        <h3 style="margin-bottom: 20px;">Add New Survey</h3>
        <form action="/surveys/add" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="event">Event ID</label>
              <input type="text" id="event" name="event" required>
            </div>
            <div class="form-group">
              <label for="participant_email">Participant Email</label>
              <input type="email" id="participant_email" name="participant_email" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="sat">Satisfaction Score</label>
              <input type="number" id="sat" name="sat" max="5">
            </div>
            <div class="form-group">
              <label for="use">Usefulness Score</label>
              <input type="number" id="use" name="use" max="5">
            </div>
            <div class="form-group">
              <label for="inst">Instructor Score</label>
              <input type="number" id="inst" name="inst" max="5">
            </div>
            <div class="form-group">
              <label for="rec">Recommendation Score</label>
              <input type="number" id="rec" name="rec" max="5">
            </div>
          </div>
          <div class="form-group">
            <label for="comment">Comments</label>
            <input type="text" id="comment" name="comment">
          </div>
          <input type="hidden" id="submissiondate" name="submissiondate">
          <button type="submit" class="btn btn-primary">Add Survey</button>
        </form>
      </div>
      <% } %>

      <div class="score-legend" aria-label="Score legend">
        <span class="legend-title">Scores Legend:</span>
        <span class="legend-item"><span class="legend-badge">S</span> Satisfaction</span>
        <span class="legend-item"><span class="legend-badge">U</span> Usefulness</span>
        <span class="legend-item"><span class="legend-badge">I</span> Instructor</span>
        <span class="legend-item"><span class="legend-badge">R</span> Recommendation</span>
        <span class="legend-item"><span class="legend-badge">O</span> Overall</span>
        <% if (canEdit) { %>
          <span class="legend-item"><span class="legend-badge">NPS</span> Net Promoter Score</span>
        <% } %>
      </div>

      <!-- âœ… Scrollable table container (sticky header) -->
      <div class="table-scroll" role="region" aria-label="Surveys table" tabindex="0">
        <table class="sticky-table">
          <thead>
            <tr>
              <th>Participant</th>
              <th>Event Name</th>
              <th>S</th>
              <th>U</th>
              <th>I</th>
              <th>R</th>
              <th>O</th>
              <% if (canEdit) { %>
              <th>NPS</th>
              <% } %>
              <th>Comments</th>
              <th>Survey Date</th>
              <% if (canEdit) { %>
              <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% if (surveys.length === 0) { %>
            <tr>
              <td colspan="<%= canEdit ? 10 : 9 %>" style="text-align: center; color: #666;">No surveys found.</td>
            </tr>
            <% } else { %>
            <% surveys.forEach((s, index) => { %>
            <tr>
              <td><%= s.participantname %></td>
              <td><%= s.eventname %></td>
              <td><%= s.surveysatisfactionscore %></td>
              <td><%= s.surveyusefulnessscore %></td>
              <td><%= s.surveyinstructorscore %></td>
              <td><%= s.surveyrecommendationscore %></td>
              <td><%= (s.surveysatisfactionscore + s.surveyusefulnessscore + s.surveyinstructorscore + s.surveyrecommendationscore) / 4 %></td>
              <% if (canEdit) { %>
              <td><%= s.surveynpsbucket %></td>
              <% } %>
              <td class="comments-cell">
                <% if (s.surveycomments && s.surveycomments.length > 100) { %>
                  <div class="comment-text truncated" id="comment-<%= index %>">
                    <%= s.surveycomments %>
                  </div>
                  <button class="comment-toggle" onclick="toggleComment(<%= index %>)">
                    Read more
                  </button>
                <% } else { %>
                  <div class="comment-text">
                    <%= s.surveycomments || 'N/A' %>
                  </div>
                <% } %>
              </td>
              <td><%= s.surveysubmissiondate ? new Date(s.surveysubmissiondate).toLocaleDateString() : 'N/A' %></td>
              <% if (canEdit) { %>
              <td class="action-buttons">
                <form action="/surveys/<%= s.participantid %>/<%= s.eventid %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this survey?')">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </td>
              <% } %>
            </tr>
            <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script>
    function toggleComment(index) {
      const commentDiv = document.getElementById('comment-' + index);
      const button = commentDiv.nextElementSibling;

      if (commentDiv.classList.contains('truncated')) {
        commentDiv.classList.remove('truncated');
        button.textContent = 'Read less';
      } else {
        commentDiv.classList.add('truncated');
        button.textContent = 'Read more';
      }
    }

    // Set the submission date/time when the form is submitted
    document.querySelector('form').addEventListener('submit', function(e) {
      const now = new Date().toISOString();
      document.getElementById('submissiondate').value = now;
    });
  </script>
</body>
</html>
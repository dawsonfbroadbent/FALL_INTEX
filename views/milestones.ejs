<!-- Milestones Data Page -->
<!-- Dawson Broadbent, Ashlynn Burgess, Markus Walker -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Milestones - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <h1>Milestones</h1>
      <p style="opacity: 0.8;">Track participant milestones and achievements</p>
    </div>
  </div>

  <section class="content-section">
    <div class="container">
      <% if (error_message) { %>
      <div class="alert alert-error"><%= error_message %></div>
      <% } %>
        <!-- search bar + add button row -->
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
        <form action="/milestones" method="GET" class="search-box" style="margin-bottom: 0;">
          <input type="text" name="q" placeholder="Search...">
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
        <% if (canEdit) { %>
          <!-- toggles the add milestone form -->
        <button type="button" class="btn btn-primary" onclick="document.getElementById('addForm').style.display = document.getElementById('addForm').style.display === 'none' ? 'block' : 'none'">Add Milestone</button>
        <% } %>
      </div>
      
       <!-- collapsible add milestone form -->
      <% if (canEdit) { %>
      <div id="addForm" class="card" style="display: none; margin-bottom: 30px;">
        <h3 style="margin-bottom: 20px;">Add New Milestone</h3>
        <form action="/milestones/add" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="participant_email">Participant Email</label>
              <input type="email" id="participant_email" name="participant_email" required>
            </div>
            <div class="form-group">
              <label for="milestonedate">Milestone Date</label>
              <input type="date" id="milestonedate" name="milestonedate" required>
            </div>
          </div>
          <div class="form-group">
            <label for="milestonetitle">Milestone Title</label>
            <input type="text" id="milestonetitle" name="milestonetitle" required>
          </div>
          <button type="submit" class="btn btn-primary">Add Milestone</button>
        </form>
      </div>
      <% } %>

      <!-- table wrapper: keeps header sticky + adds scroll on overflow -->
      <div class="table-scroll" role="region" aria-label="Milestones table" tabindex="0">
        <table class="sticky-table">
          <thead>
            <tr>
              <th>Participant Name</th>
              <th>Milestone Title</th>
              <th>Date</th>
              <% if (canEdit) { %>
              <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% if (milestones.length === 0) { %>
            <tr>
              <!-- adjust colspan when edit permissions change -->
              <td colspan="<%= canEdit ? 5 : 4 %>" style="text-align: center; color: #666;">No milestones found.</td>
            </tr>
            <% } else { %>
            <% milestones.forEach(m => { %>
            <tr>
              <td><%= m.participant %></td>
              <td><%= m.title || 'N/A' %></td>
              <td><%= m.date ? new Date(m.date).toLocaleDateString() : 'N/A' %></td>
              <% if (canEdit) { %>
                <!-- edit button loads values into modal using data-* attributes -->
                <td class="action-buttons">
                  <button type="button" class="btn-edit" onclick="openEditModal(this)"
                    data-participantid="<%= m.participantid %>"
                    data-oldtitle="<%= m.title || '' %>"
                    data-date="<%= m.date ? new Date(m.date).toISOString().split('T')[0] : '' %>"
                  >Edit</button>
                  <!-- delete route uses participantid + encoded title -->
                  <form action="/milestones/<%= m.participantid %>/<%= encodeURIComponent(m.title || '') %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this milestone?')">
                    <button type="submit" class="btn-delete">Delete</button>
                  </form>
                </td>
              <% } %>
            </tr>
            <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- modal for editing milestone details -->
<% if (canEdit) { %>
  <div id="editModalBackdrop" class="modal-backdrop" onclick="backdropClose(event)">
    <div class="modal" role="dialog" aria-modal="true" aria-labelledby="editModalTitle" onclick="event.stopPropagation()">
      <div class="modal-header">
        <h3 id="editModalTitle">Edit Milestone</h3>
        <button class="modal-close" type="button" onclick="closeEditModal()" aria-label="Close">Ã—</button>
      </div>

      <div class="modal-body">
        <!-- form action updated dynamically through js -->
        <form id="editMilestoneForm" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="edit_milestonedate">Milestone Date</label>
              <input type="date" id="edit_milestonedate" name="milestonedate" required>
            </div>
          </div>

          <div class="form-group">
            <label for="edit_milestonetitle">Milestone Title</label>
            <input type="text" id="edit_milestonetitle" name="milestonetitle" required>
          </div>

          <div class="modal-actions">
            <button type="button" class="btn-cancel" onclick="closeEditModal()">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% } %>

<script>
  function toDateInput(value) {
    // Accepts ISO string or Date-like; returns YYYY-MM-DD
    if (!value) return '';
    const d = new Date(value);
    if (isNaN(d.getTime())) return '';
    const pad = (n) => String(n).padStart(2, '0');
    return `${d.getFullYear()}-${pad(d.getMonth() + 1)}-${pad(d.getDate())}`;
  }
// opens modal + preloads form fields
  function openEditModal(button) {
    const backdrop = document.getElementById('editModalBackdrop');
    const form = document.getElementById('editMilestoneForm');
    if (!backdrop || !form) return;

    const participantid = button.dataset.participantid;
    const oldtitle = button.dataset.oldtitle; // original title used to find the row
    const date = button.dataset.date;

    // Route matches: POST /milestones/:participantid/:oldtitle/edit
    form.action = `/milestones/${participantid}/${encodeURIComponent(oldtitle)}/edit`;

    document.getElementById('edit_milestonedate').value = date;
    document.getElementById('edit_milestonetitle').value = oldtitle;

    backdrop.style.display = 'flex';
    document.body.style.overflow = 'hidden';
  }

  function closeEditModal() {
    const backdrop = document.getElementById('editModalBackdrop');
    if (!backdrop) return;
    backdrop.style.display = 'none';
    document.body.style.overflow = '';
  }
// close modal when clicking outside card
  function backdropClose(event) {
    if (event.target.id === 'editModalBackdrop') closeEditModal();
  }
  // esc key closes modal as well
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeEditModal();
  });
</script>

  <%- include('partials/footer') %>
</body>
</html>
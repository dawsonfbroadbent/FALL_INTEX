<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Participants - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <h1>Participants</h1>
      <p style="opacity: 0.8;">Manage program participants</p>
    </div>
  </div>

  <section class="content-section">
    <div class="container">
      <% if (error_message) { %>
      <div class="alert alert-error"><%= error_message %></div>
      <% } %>

      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
        <form action="/participants" method="GET" class="search-box" style="margin-bottom: 0;">
          <input type="text" name="q" placeholder="Search participants..." value="<%= q || '' %>">
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
        <% if (canEdit) { %>
        <button type="button" class="btn btn-primary" onclick="document.getElementById('addForm').style.display = document.getElementById('addForm').style.display === 'none' ? 'block' : 'none'">Add Participant</button>
        <% } %>
      </div>

      <% if (canEdit) { %>
      <div id="addForm" class="card" style="display: none; margin-bottom: 30px;">
        <h3 style="margin-bottom: 20px;">Add New Participant</h3>
        <form action="/participants/add" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="firstname">First Name</label>
              <input type="text" id="firstname" name="firstname" required>
            </div>
            <div class="form-group">
              <label for="lastname">Last Name</label>
              <input type="text" id="lastname" name="lastname" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="text" id="password" name="password" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="dob">Date of Birth</label>
              <input type="date" id="dob" name="dob">
            </div>
            <div class="form-group">
              <label for="role">Role</label>
              <input type="text" id="role" name="role" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone">
            </div>
            <div class="form-group">
              <label for="city">City</label>
              <input type="text" id="city" name="city">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="state">State</label>
              <input type="text" id="state" name="state" maxlength="2" placeholder="e.g., CA">
            </div>
            <div class="form-group">
              <label for="zip">Zip Code</label>
              <input type="text" id="zip" name="zip" maxlength="10">
            </div>
          </div>
          <div class="form-group">
            <label for="school_employer">School or Employer</label>
            <input type="text" id="school_employer" name="school_employer">
          </div>
          <label>Field of Interest</label>
          <div class="form-group">
            <input type="radio" id="art" name="field_of_interest" value="Art" required>
            <label for="art">Art</label>
            <input type="radio" id="stem" name="field_of_interest" value="STEM" required>
            <label for="stem">STEM</label>
            <input type="radio" id="both" name="field_of_interest" value="Both" required>
            <label for="both">Both</label>
          </div>
          <button type="submit" class="btn btn-primary">Add Participant</button>
        </form>
      </div>
      <% } %>

      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <% if (canEdit) { %>
            <th>Actions</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (participants.length === 0) { %>
          <tr>
            <td colspan="<%= canEdit ? 5 : 4 %>" style="text-align: center; color: #666;">No participants found.</td>
          </tr>
          <% } else { %>
          <% participants.forEach(p => { %>
          <tr>
            <td><%= p.participantfirstname %></td>
            <td><%= p.participantlastname %></td>
            <td><%= p.participantemail || 'N/A' %></td>
            <% if (canEdit) { %>
            <td class="action-buttons">
              <a href="/milestones?participantid=<%= p.participantid %>" class="btn-edit">Milestones</a>
              <form action="/participants/<%= p.participantid %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this participant?')">
                <button type="submit" class="btn-delete">Delete</button>
              </form>
            </td>
            <% } %>
          </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
</html>

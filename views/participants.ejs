<!-- Participants Data Page -->
<!-- Dawson Broadbent, Ashlynn Burgess, Markus Walker -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Participants - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <h1>Participants</h1>
      <p style="opacity: 0.8;">Manage program participants</p>
    </div>
  </div>

  <section class="content-section">
    <div class="container">
      <% if (error_message) { %>
      <div class="alert alert-error"><%= error_message %></div>
      <% } %>

      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
        <form action="/participants" method="GET" class="search-box" style="margin-bottom: 0;">
          <input type="text" name="q" placeholder="Search participants..." value="<%= q || '' %>">
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
        <% if (canEdit) { %>
        <button type="button" class="btn btn-primary" onclick="document.getElementById('addForm').style.display = document.getElementById('addForm').style.display === 'none' ? 'block' : 'none'">Add Participant</button>
        <% } %>
      </div>

      <% if (canEdit) { %>
      <div id="addForm" class="card" style="display: none; margin-bottom: 30px;">
        <h3 style="margin-bottom: 20px;">Add New Participant</h3>
        <form action="/participants/add" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="firstname">First Name</label>
              <input type="text" id="firstname" name="firstname" required>
            </div>
            <div class="form-group">
              <label for="lastname">Last Name</label>
              <input type="text" id="lastname" name="lastname" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="text" id="password" name="password" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="dob">Date of Birth</label>
              <input type="date" id="dob" name="dob">
            </div>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="state">State</label>
              <input type="text" id="state" name="state" maxlength="2" placeholder="e.g., CA">
            </div>
            <div class="form-group">
              <label for="zip">Zip Code</label>
              <input type="text" id="zip" name="zip" maxlength="10">
            </div>
          </div>
          <div class="form-group">
            <label for="school_employer">School or Employer</label>
            <input type="text" id="school_employer" name="school_employer">
          </div>
          <div class="form-group">
            <label class="form-label">Field of Interest</label>
          
            <div class="interest-options" role="radiogroup" aria-label="Field of Interest">
              <input type="radio" id="art" name="field_of_interest" value="Art" required>
              <label for="art" class="interest-pill">Art</label>
          
              <input type="radio" id="stem" name="field_of_interest" value="STEM" required>
              <label for="stem" class="interest-pill">STEM</label>
          
              <input type="radio" id="both" name="field_of_interest" value="Both" required>
              <label for="both" class="interest-pill">Both</label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Add Participant</button>
        </form>
      </div>
      <% } %>

      <!-- ✅ Scrollable table container (sticky header) -->
      <div class="table-scroll" role="region" aria-label="Participants table" tabindex="0">
        <table class="sticky-table">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>City</th>
              <th>State</th>
              <th>School/Employer</th>
              <th>Field of Interest</th>
              <% if (canEdit) { %>
              <th>Role</th>
              <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% if (participants.length === 0) { %>
            <tr>
              <td colspan="<%= canEdit ? 5 : 4 %>" style="text-align: center; color: #666;">No participants found.</td>
            </tr>
            <% } else { %>
            <% participants.forEach(p => { %>
            <tr>
              <td><%= p.participantfirstname %></td>
              <td><%= p.participantlastname %></td>
              <td><%= p.participantemail || 'N/A' %></td>
              <td><%= p.participantcity %></td>
              <td><%= p.participantstate %></td>
              <td><%= p.participantschooloremployer %></td>
              <td><%= p.participantfieldofinterest %></td>
              <% if (canEdit) { %>
              <td><%= p.participantrole %></td>
              <td class="action-buttons">
                <a href="/milestones?participantid=<%= p.participantid %>" class="btn-milestones">Milestones</a>
                <button type="button" class="btn-edit" onclick="openEditModal(this)"
                  data-participantid="<%= p.participantid %>"
                  data-firstname="<%= p.participantfirstname %>"
                  data-lastname="<%= p.participantlastname %>"
                  data-email="<%= p.participantemail %>"
                  data-password="<%= p.password %>"
                  data-phone="<%= p.participantphone %>"
                  data-city="<%= p.participantcity %>"
                  data-state="<%= p.participantstate %>"
                  data-zip="<%= p.participantzip %>"
                  data-school_employer="<%= p.participantschooloremployer %>"
                  data-field_of_interest="<%= p.participantfieldofinterest %>"
                >Edit</button>
                <form action="/participants/<%= p.participantid %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this participant? Doing so will delete all associated donations, registrations, survey responses, etc.')">
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </td>
              <% } %>
            </tr>
            <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- ✅ Edit Modal -->
  <% if (canEdit) { %>
    <div id="editModalBackdrop" class="modal-backdrop" onclick="backdropClose(event)">
      <div class="modal" role="dialog" aria-modal="true" aria-labelledby="editModalTitle" onclick="event.stopPropagation()">
        <div class="modal-header">
          <h3 id="editModalTitle">Edit Participant</h3>
          <button class="modal-close" type="button" onclick="closeEditModal()" aria-label="Close">×</button>
        </div>

        <div class="modal-body">
          <form id="editParticipantForm" method="POST">
            <div class="form-row">
              <div class="form-group">
                <label for="edit_firstname">First Name</label>
                <input type="text" id="edit_firstname" name="firstname" required>
              </div>
              <div class="form-group">
                <label for="edit_lastname">Last Name</label>
                <input type="text" id="edit_lastname" name="lastname" required>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="edit_email">Email</label>
                <input type="email" id="edit_email" name="email" required>
              </div>
              <div class="form-group">
                <label for="edit_password">Password</label>
                <input type="text" id="edit_password" name="password" required>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="edit_phone">Phone</label>
                <input type="text" id="edit_phone" name="phone">
              </div>
              <div class="form-group">
                <label for="edit_city">City</label>
                <input type="text" id="edit_city" name="city">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="edit_state">State</label>
                <input type="text" id="edit_state" name="state">
              </div>
              <div class="form-group">
                <label for="edit_zip">Zip</label>
                <input type="text" id="edit_zip" name="zip">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="edit_school_employer">School/Employer</label>
                <input type="text" id="edit_school_employer" name="school_employer">
              </div>
              <div class="form-group">
                <label for="edit_field_of_interest">Field of Interest</label>
                <select id="edit_field_of_interest" name="field_of_interest" required>
                  <option value="">Select…</option>
                  <option value="Arts">Arts</option>
                  <option value="STEM">STEM</option>
                  <option value="Both">Both</option>
                </select>
              </div>
            </div>

            <div class="modal-actions">
              <button type="button" class="btn-cancel" onclick="closeEditModal()">Cancel</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% } %>

  <script>
    function openEditModal(button) {
      const backdrop = document.getElementById('editModalBackdrop');
      const form = document.getElementById('editParticipantForm');
      if (!backdrop || !form) return;

      const participantid = button.dataset.participantid;

      // Route matches: POST /participants/:participantid/edit
      form.action = `/participants/${participantid}/edit`;

      // Populate fields
      document.getElementById('edit_firstname').value = button.dataset.firstname || '';
      document.getElementById('edit_lastname').value = button.dataset.lastname || '';
      document.getElementById('edit_email').value = button.dataset.email || '';
      document.getElementById('edit_password').value = button.dataset.password || '';
      document.getElementById('edit_phone').value = button.dataset.phone || '';
      document.getElementById('edit_city').value = button.dataset.city || '';
      document.getElementById('edit_state').value = button.dataset.state || '';
      document.getElementById('edit_zip').value = button.dataset.zip || '';
      document.getElementById('edit_school_employer').value = button.dataset.school_employer || '';
      document.getElementById('edit_field_of_interest').value = button.dataset.field_of_interest || '';

      backdrop.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }

    function closeEditModal() {
      const backdrop = document.getElementById('editModalBackdrop');
      if (!backdrop) return;
      backdrop.style.display = 'none';
      document.body.style.overflow = '';
    }

    function backdropClose(event) {
      if (event.target.id === 'editModalBackdrop') closeEditModal();
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeEditModal();
    });
  </script>

  <%- include('partials/footer') %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Participants - Ella Rises</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="page-header">
    <div class="container">
      <h1>Participants</h1>
      <p style="opacity: 0.8;">Manage program participants</p>
    </div>
  </div>

  <section class="content-section">
    <div class="container">
      <% if (error_message) { %>
      <div class="alert alert-error"><%= error_message %></div>
      <% } %>

      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
        <form action="/participants" method="GET" class="search-box" style="margin-bottom: 0;">
          <input type="text" name="q" placeholder="Search participants..." value="<%= q || '' %>">
          <button type="submit" class="btn btn-secondary">Search</button>
        </form>
        <% if (canEdit) { %>
        <button type="button" class="btn btn-primary" onclick="document.getElementById('addForm').style.display = document.getElementById('addForm').style.display === 'none' ? 'block' : 'none'">Add Participant</button>
        <% } %>
      </div>

      <% if (canEdit) { %>
      <div id="addForm" class="card" style="display: none; margin-bottom: 30px;">
        <h3 style="margin-bottom: 20px;">Add New Participant</h3>
        <form action="/participants/add" method="POST">
          <div class="form-row">
            <div class="form-group">
              <label for="first_name">First Name</label>
              <input type="text" id="first_name" name="first_name" required>
            </div>
            <div class="form-group">
              <label for="last_name">Last Name</label>
              <input type="text" id="last_name" name="last_name" required>
            </div>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email">
          </div>
          <button type="submit" class="btn btn-primary">Add Participant</button>
        </form>
      </div>
      <% } %>

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <% if (canEdit) { %>
            <th>Actions</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (participants.length === 0) { %>
          <tr>
            <td colspan="<%= canEdit ? 5 : 4 %>" style="text-align: center; color: #666;">No participants found.</td>
          </tr>
          <% } else { %>
          <% participants.forEach(p => { %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.first_name %></td>
            <td><%= p.last_name %></td>
            <td><%= p.email || 'N/A' %></td>
            <% if (canEdit) { %>
            <td class="action-buttons">
              <a href="/milestones?participant_id=<%= p.id %>" class="btn-edit">Milestones</a>
              <form action="/participants/<%= p.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this participant?')">
                <button type="submit" class="btn-delete">Delete</button>
              </form>
            </td>
            <% } %>
          </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
</html>
